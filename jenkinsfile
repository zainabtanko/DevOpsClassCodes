pipeline {
    agent any
    tools {
        maven 'M2_HOME'
    }

    stages {
        stage('clone') {
            steps {
                git url: 'https://github.com/devopseng129/DevOpsClassCodes.git'
            }
        }
        stage('compile') {
            steps {
                bat 'mvn compile'
            }
        }
        stage('code_review') {
            steps {
                bat 'mvn -P metrics pmd:pmd'
            }
        }
        stage('unit_test') {
            steps {
                bat 'mvn test'
            }
        }
        stage('metric_check') {
            steps{
                bat 'mvn cobertura:cobertura -D cobertura.report.format=xml'
            }
        }
        stage('package') {
            steps{
                bat 'mvn package'
            }
        }
    }
}
